<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd
        http://www.springframework.org/schema/context
 		http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <import resource="discounts.xml"/>
    <context:annotation-config />

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:auditoriums.properties</value>
            </list>
        </property>
    </bean>

    <bean id="userDao" class="ua.epam.spring.hometask.dao.UserDao">
        <property name="registeredUsers">
            <map>
                <entry key="1" value-ref="user"/>
            </map>
        </property>
    </bean>

    <bean id="userService" class="ua.epam.spring.hometask.service.impl.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>

    <bean id="eventDao" class="ua.epam.spring.hometask.dao.EventDao">
        <property name="events">
            <set>
                <ref bean="event"/>
            </set>
        </property>
    </bean>

    <bean id="eventService" class="ua.epam.spring.hometask.service.impl.EventServiceImpl">
        <property name="eventDao" ref="eventDao"/>
    </bean>

    <bean id="smallAuditorium" class="ua.epam.spring.hometask.domain.Auditorium">
        <property name="name" value="${auditorum.small.name}"/>
        <property name="numberOfSeats" value="${auditorum.small.seats}"/>
        <property name="vipSeats" value="#{'${auditorum.small.vip}'.split(',')}"/>
    </bean>

    <bean id="bigAuditorium" class="ua.epam.spring.hometask.domain.Auditorium">
        <property name="name" value="${auditorum.big.name}"/>
        <property name="numberOfSeats" value="${auditorum.big.seats}"/>
        <property name="vipSeats" value="#{'${auditorum.big.vip}'.split(',')}"/>
    </bean>

    <bean id="auditoriumDao" class="ua.epam.spring.hometask.dao.AuditoriumDao">
    <property name="auditoriums">
        <set>
            <ref bean="smallAuditorium"/>
            <ref bean="bigAuditorium"/>
        </set>
    </property>
    </bean>

    <bean id="auditoriumService" class="ua.epam.spring.hometask.service.impl.AuditoriumServiceImpl">
        <property name="auditoriumDao" ref="auditoriumDao"/>
    </bean>

    <bean id="bookingDao" class="ua.epam.spring.hometask.dao.BookingDao"/>

    <bean id="bookingService" class="ua.epam.spring.hometask.service.impl.BookingServiceImpl">
        <property name="bookingDao" ref="bookingDao"/>
        <property name="discountService" ref="discountService"/>
    </bean>

    <bean id="user" class="ua.epam.spring.hometask.domain.User">
        <property name="id" value="1"/>
        <property name="firstName" value="Ivan"/>
        <property name="email" value="ivanov@gmail.com"/>
        <property name="birthday" ref="localDate"/>
    </bean> 

    <bean id="event" class="ua.epam.spring.hometask.domain.Event">
        <property name="name" value="Presentation"/>
        <property name="basePrice" value="150.0"/>
        <property name="rating" value="MID"/>
    </bean>

    <bean id="localDate" class="java.time.LocalDate" factory-method="now"/>

</beans>